<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/bg_quantity_selector">

        <RadioButton
            android:id="@+id/radio_selected_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp">

            <TextView
                android:id="@+id/tvNamePhone"
                android:text="Nguyễn Hải - 0946179504"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvDefault"
                android:text="Default shipping address"
                android:textColor="@color/primary_blue"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvAddressName"
                android:text="31a Tăng Nhơn Phú, Phường Phước Long B, Quận 9, Hồ Chí Minh, VN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
