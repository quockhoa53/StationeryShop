<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/freeship"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_quantity_selector"
    android:padding="8dp"
    android:layout_margin="8dp">

    <!-- Cột trái: Icon và loại mã -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#DFF5E1"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ic_coupon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_truck" />

        <TextView
            android:id="@+id/coupon_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freeship"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Cột phải: Thông tin mã -->
    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="8dp">

    <!-- Tiêu đề mã -->
        <TextView
            android:id="@+id/coupon_name"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_information"
            android:text="MÃ GIẢM 25K - POP MART"
            android:textColor="@color/black"
            android:textStyle="bold" />

    <!-- Nội dung mô tả -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áp dụng cho Đơn Mua Mô Hình Pop Mart\nWealthy Snake's New Year Celebration"
        android:textSize="12sp"
        android:textColor="#444444"
        android:layout_marginTop="2dp" />

    <!-- Nút Apply -->
    <Button
        android:id="@+id/apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:backgroundTint="#2979FF"
        android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
